-- [[ tri73637 - ONE CLICK PICKUP V65 ]] --
local lp = game:GetService("Players").LocalPlayer
local pgui = lp:FindFirstChild("PlayerGui")

-- 1. LOGIC CHẠY NGẦM CHO AUTO
task.spawn(function()
    while task.wait(0.3) do
        if auto then
            pcall(function()
                local hrp = lp.Character.HumanoidRootPart
                for _, v in pairs(workspace:GetDescendants()) do
                    if v:IsA("ProximityPrompt") then
                        local p = v.Parent
                        local pos = p:IsA("Model") and p:GetModelCFrame().p or p.Position
                        if (hrp.Position - pos).Magnitude < 22 then
                            v.HoldDuration = 0
                            fireproximityprompt(v)
                        end
                    end
                end
            end)
        end
    end
end)
